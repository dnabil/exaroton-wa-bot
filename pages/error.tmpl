<!doctype html>
<html lang="en" data-theme="dark">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ .Code }}</title>
    <link rel="stylesheet" href="/public/styles/pico.min.css" />
    <style>
        body {
            min-height: 100vh;
            display: grid;
            place-items: center;
            background-color: var(--pico-background-color);
        }

        main {
            text-align: center;
            max-width: 600px;
        }

        h1 {
            font-size: 5rem;
            margin-bottom: 0.25em;
        }

        a[role="button"] {
            margin-top: 1.5em;
        }
    </style>
</head>

<body>
    <main>
        <h1>{{ .Code }}</h1>
        <h2>{{ .Message }}</h2>
        <p>{{ .Description }}</p>
        <a href="/" role="button">Back to Home</a>
    </main>
</body>

</html>